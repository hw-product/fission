{
    "fission": {
        "code_fetcher": {
            "working_directory": "/tmp/repositories"
        },
        "package_builder": {
            "chef_solo_path": "/opt/chef/bin/chef-solo",
            "working_directory": "/tmp/packages"
        },
        "utils": {
            "process": {
                "max_processes": 5,
                "enable_spawn": true
            }
        },
        "loaders": {
            "workers": [
                "fission-validator",
                "fission-rest-api",
                "fission-package-builder",
                "fission-code-fetcher"
            ],
            "sources": [
                "carnivore-http"
            ]
        },
        "sources": {
            "fission_validator": {
                "type": "http",
                "args": {
                    "port": 3001
                }
            },
            "fission_rest_api": {
                "type": "http",
                "args": {
                    "bind": "127.0.0.1",
                    "port": 9876
                }
            },
            "fission_code_fetcher": {
                "type": "http",
                "args": {
                    "bind": "127.0.0.1",
                    "port": 3002
                }
            },
            "fission_package_builder": {
                "type": "http",
                "args": {
                    "bind": "127.0.0.1",
                    "port": 3003
                }
            }
        },
        "workers": {
            "fission_validator": 2,
            "fission_rest_api": 0,
            "fission_package_builder": 1,
            "fission_code_fetcher": 1
        }
    }
}
